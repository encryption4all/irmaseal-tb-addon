{
    "manifest_version": 2,
    "name": "IRMASeal",
    "version": "0.1",
    "description": "IRMASeal IBE encryption addon for thunderbird",
    "icons": {
        "48": "icons/irma.ico"
    },
    "background": {
        "scripts": ["background.js"]
    },
    "experiment_apis": {
        "msgHdr": {
            "schema": "msgHdr-schema.json",
            "parent": {
                "scopes": ["addon_parent"],
                "paths": [["msgHdr"]],
                "script": "msgHdr-impl.js"
            }
        }
    },
    "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}
