{
    "manifest_version": 2,
    "name": "IRMASeal",
    "version": "0.1",
    "description": "IRMASeal IBE encryption addon for thunderbird",
    "applications": {
        "gecko": {
            "id": "irmaseal4tb@e4a.org",
            "strict_min_version": "78.0",
            "strict_max_version": "88.*"
        }
    },
    "icons": {
        "48": "icons/irma.ico"
    },
    "background": {
        "scripts": ["background.js"]
    },
    "experiment_apis": {
        "irmaseal4tb": {
            "schema": "irmaseal4tb-schema.json",
            "parent": {
                "scopes": ["addon_parent"],
                "paths": [["irmaseal4tb"]],
                "script": "irmaseal4tb-impl.js",
                "events": ["startup"]
            }
        }
    },
    "compose_action": {
        "default_area": "maintoolbar"
    },
    "message_display_action": {
        "default_area": "maintoolbar",
        "default_popup": "sealDecrypt.html",
        "default_icon": "icons/decrypt-icon.png"
    },
    "permissions": [
        "activeTab",
        "messagesRead",
        "accountsRead",
        "compose",
        "messagesModify",
        "storage"
    ],
    "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}
