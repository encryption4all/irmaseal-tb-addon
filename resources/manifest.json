{
    "manifest_version": 2,
    "name": "PostGuard",
    "version": "0.1",
    "description": "PostGuard encryption plugin for Thunderbird",
    "applications": {
        "gecko": {
            "id": "pg4tb@e4a.org",
            "strict_min_version": "88.0",
            "strict_max_version": "*"
        }
    },
    "icons": {
        "48": "icons/pg_logo_no_text.svg"
    },
    "default_locale": "en",
    "background": {
        "scripts": ["background.js"]
    },
    "experiment_apis": {
        "pg4tb": {
            "schema": "pg4tb/pg4tb-schema.json",
            "parent": {
                "scopes": ["addon_parent"],
                "paths": [["pg4tb"]],
                "script": "pg4tb/pg4tb-impl.js",
                "events": ["startup"]
            }
        },
        "switchbar": {
            "schema": "switchbar/schema.json",
            "parent": {
                "scopes": ["addon_parent"],
                "paths": [["switchbar"]],
                "script": "switchbar/implementation.js"
            }
        },
        "NotifyTools": {
            "schema": "NotifyTools/schema.json",
            "parent": {
                "scopes": ["addon_parent"],
                "paths": [["NotifyTools"]],
                "script": "NotifyTools/implementation.js",
                "events": ["startup"]
            }
        }
    },
    "permissions": [
        "activeTab",
        "messagesRead",
        "accountsRead",
        "compose",
        "messagesModify",
        "messagesDelete",
        "storage",
        "accountsFolders"
    ],
    "web_accessible_resources": ["images/*", "icons/*"],
    "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}
