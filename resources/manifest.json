{
    "manifest_version": 2,
    "name": "IRMASeal",
    "version": "0.1",
    "description": "IRMASeal IBE encryption addon for thunderbird",
    "icons": {
        "48": "icons/irma.ico"
    },
    "background": {
        "scripts": ["background.js"]
    },
    "experiment_apis": {
        "msgHdr": {
            "schema": "msgHdr-schema.json",
            "parent": {
                "scopes": ["addon_parent"],
                "paths": [["msgHdr"]],
                "script": "msgHdr-impl.js"
            }
        }
    },
    "compose_action": {
        "default_area": "maintoolbar",
        "default_icon": "icons/encrypt-icon.png",
        "default_popup": "sealCompose.html"
    },
    "message_display_action": {
        "default_area": "maintoolbar",
        "default_icon": "icons/decrypt-icon.png",
        "default_popup": "sealDecrypt.html"
    },
    "permissions": ["activeTab", "messagesRead", "accountsRead"],
    "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}
