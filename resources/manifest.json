{
    "manifest_version": 2,
    "name": "IRMASeal",
    "version": "0.1",
    "description": "IRMASeal IBE encryption addon for thunderbird",
    "applications": {
        "gecko": {
            "id": "irmaseal4tb@e4a.org",
            "strict_min_version": "88.0",
            "strict_max_version": "*"
        }
    },
    "icons": {
        "48": "icons/irma.ico"
    },
    "default_locale": "en",
    "background": {
        "scripts": ["background.js"]
    },
    "experiment_apis": {
        "irmaseal4tb": {
            "schema": "irmaseal4tb/irmaseal4tb-schema.json",
            "parent": {
                "scopes": ["addon_parent"],
                "paths": [["irmaseal4tb"]],
                "script": "irmaseal4tb/irmaseal4tb-impl.js",
                "events": ["startup"]
            }
        },
        "switchbar": {
            "schema": "switchbar/schema.json",
            "parent": {
                "scopes": ["addon_parent"],
                "paths": [["switchbar"]],
                "script": "switchbar/implementation.js"
            }
        }
    },
    "permissions": [
        "activeTab",
        "messagesRead",
        "accountsRead",
        "compose",
        "messagesModify",
        "storage"
    ],
    "web_accessible_resources": ["images/*"],
    "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}
