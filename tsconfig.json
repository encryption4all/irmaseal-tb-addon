{
    "compilerOptions": {
        "outDir": "./build/compile/",
        "target": "es2019",
        "module": "esnext",
        "sourceMap": false,
        "allowJs": true,
        "rootDir": ".",
        "strict": true,
        "noImplicitAny": false,
        "noImplicitReturns": false,
        "noUnusedLocals": false,
        "removeComments": false,
        "forceConsistentCasingInFileNames": true,
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules/"]
}
